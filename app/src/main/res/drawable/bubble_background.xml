<!-- res/drawable/bubble_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color for the bubble -->
    <solid android:color="@color/bubble_background_color" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional: Add padding if needed -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
